    crossorigin="anonymous"></script>
<script>

    const getUsuarios = async () => {

        const response = await fetch("http://localhost:3000/usuarios");
        const data = await response.json();
        console.log(data)
        const estado = data.estado

        $(".usuarios").html("");
        $.each(data, (i, c) => {
            let estado = data[0].estado
            let estadoRev = revision(estado);
            function revision() {
                if (estado != true) {
                    return `<td class="text-warning font-weight-bold">En revisión</td>`
                } else {
                    return `<td class="text-success font-weight-bold">Aprobado</td>`
                }
            }
            $(".usuarios").append(
                `<tr>
                <td>${c.id}</td>
               <td> <img src='../archivos/${c.foto}' width="50px" height="50px"></td>
                <td>${c.nombre}</td>
                <td>${c.anos_experiencia}</td>
                <td>${c.especialidad}</td>
                ${estadoRev}
                </tr>`
            )
        })
    }
    getUsuarios();
    ;


</script>